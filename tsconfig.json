{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ],

    // declaration setting is pushed from rollup
    // "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
