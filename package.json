{
  "name": "rend",
  "version": "0.1.0",
  "description": "A simple WebGL 2 rendering library",
  "author": "yanchith",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently --raw --kill-others \"yarn run build:watch\" \"yarn run serve\"",
    "serve": "http-server -p 8000",
    "prebuild": "rimraf dist",
    "build": "rollup --config",
    "prebuild:watch": "rimraf dist",
    "build:watch": "rollup --config --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json --type-check \"src/**/*.ts*\"",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/webgl2": "^0.0.2",
    "concurrently": "^3.5.0",
    "http-server": "^0.10.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.1",
    "rollup-plugin-typescript2": "^0.8.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
