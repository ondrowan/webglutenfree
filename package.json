{
  "name": "glutenfree",
  "version": "0.0.2",
  "description": "A simple WebGL 2 rendering library",
  "author": "yanchith",
  "license": "MIT",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "serve": "http-server docs -p 8000",
    "prebuild": "rimraf build",
    "build": "tsc --outDir build",
    "prebuild:watch": "rimraf build",
    "build:watch": "tsc --outDir build --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts*\"",
    "predist": "rimraf dist",
    "dist": "rollup --config && rollup --config rollup.config.esm.js",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/webgl2": "^0.0.2",
    "http-server": "^0.10.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
