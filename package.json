{
  "name": "glutenfree",
  "version": "0.0.2",
  "description": "We serve your draw calls type-safe and gluten-free",
  "author": "yanchith",
  "license": "MIT",
  "main": "dist/glutenfree.umd.js",
  "module": "dist/glutenfree.es.js",
  "types": "dist/glutenfree.d.ts",
  "scripts": {
    "serve": "http-server docs -p 8000",
    "prebuild": "rimraf build",
    "build": "tsc --outDir build",
    "prebuild:watch": "rimraf build",
    "build:watch": "tsc --outDir build --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts*\"",
    "predist": "rimraf dist",
    "dist": "yarn dist:esm && yarn dist:umd && yarn dist:esm:prod && yarn dist:umd:prod && yarn dist:dts && yarn dist:demolib",
    "dist:esm": "FORMAT=es rollup --config",
    "dist:esm:prod": "NODE_ENV=production FORMAT=es rollup --config",
    "dist:umd": "FORMAT=umd rollup --config",
    "dist:umd:prod": "NODE_ENV=production FORMAT=umd rollup --config",
    "dist:dts": "dts-bundle-generator src/index.ts -o dist/glutenfree.d.ts --umd-module-name glutenfree",
    "dist:demolib": "yarn __rmdemolib && yarn __cpdemolib",
    "__rmdemolib": "rm docs/lib/glutenfree.{es.min.js,es.min.js.map}",
    "__cpdemolib": "cp dist/glutenfree.{es.min.js,es.min.js.map} docs/lib",
    "clean": "rimraf build && rimraf dist",
    "cleandist": "yarn build && yarn dist"
  },
  "devDependencies": {
    "@types/webgl2": "^0.0.2",
    "dts-bundle-generator": "^0.6.0",
    "http-server": "^0.10.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "uglify-es": "^3.2.2"
  }
}
