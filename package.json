{
  "name": "webglutenfree",
  "version": "0.0.5",
  "description": "We serve your draw calls type-safe and gluten-free",
  "keywords": [
    "webgl",
    "gl",
    "stateless",
    "graphics",
    "glsl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yanchith/webglutenfree.git"
  },
  "author": "yanchith",
  "license": "MIT",
  "main": "dist/webglutenfree.umd.js",
  "module": "dist/webglutenfree.js",
  "types": "dist/webglutenfree.d.ts",
  "scripts": {
    "serve": "http-server docs -p 8000",
    "prebuild": "rimraf build",
    "build": "tsc --outDir build",
    "prebuild:watch": "rimraf build",
    "build:watch": "tsc --outDir build --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts*\"",
    "predist": "rimraf dist",
    "dist": "yarn dist:es && yarn dist:es:prod:min && yarn dist:umd:prod:min && yarn dist:dts",
    "dist:es": "cross-env FMT=es rollup --config",
    "dist:umd": "cross-env FMT=umd rollup --config",
    "dist:es:prod": "cross-env FMT=es PROD=true rollup --config",
    "dist:umd:prod": "cross-env FMT=umd PROD=true rollup --config",
    "dist:es:prod:min": "cross-env FMT=es PROD=true MIN=true rollup --config",
    "dist:umd:prod:min": "cross-env FMT=umd PROD=true MIN=true rollup --config",
    "dist:dts": "cpx \"build/**/*.d.ts\" dist && mv dist/index.d.ts dist/webglutenfree.d.ts",
    "predist:es:watch": "rimraf dist",
    "dist:es:watch": "cross-env FMT=es rollup --config --watch",
    "demolib": "yarn demolib:rm && yarn demolib:cp",
    "demolib:rm": "rm docs/lib/webglutenfree.{js,js.map}",
    "demolib:cp": "cp dist/webglutenfree.{js,js.map} docs/lib",
    "clean": "rimraf build && rimraf dist"
  },
  "dependencies": {
    "@types/webgl2": "^0.0.2"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "cross-env": "^5.1.3",
    "http-server": "^0.10.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "uglify-es": "^3.3.8"
  }
}
