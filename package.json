{
  "name": "glutenfree",
  "version": "0.0.2",
  "description": "We serve your draw calls type-safe and gluten-free",
  "author": "yanchith",
  "license": "MIT",
  "main": "dist/glutenfree.production.umd.js",
  "module": "dist/glutenfree.production.es.js",
  "types": "dist/glutenfree.d.ts",
  "scripts": {
    "serve": "http-server docs -p 8000",
    "prebuild": "rimraf build",
    "build": "tsc --outDir build",
    "prebuild:watch": "rimraf build",
    "build:watch": "tsc --outDir build --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts*\"",
    "predist": "rimraf dist",
    "dist": "yarn dist:es && yarn dist:umd && yarn dist:es:prod && yarn dist:umd:prod && yarn dist:es:prod:min && yarn dist:umd:prod:min && yarn dist:dts",
    "dist:es": "cross-env FORMAT=es rollup --config",
    "dist:umd": "cross-env FORMAT=umd rollup --config",
    "dist:es:prod": "cross-env NODE_ENV=production FORMAT=es rollup --config",
    "dist:umd:prod": "cross-env NODE_ENV=production FORMAT=umd rollup --config",
    "dist:es:prod:min": "cross-env NODE_ENV=production FORMAT=es MIN=true rollup --config",
    "dist:umd:prod:min": "cross-env NODE_ENV=production FORMAT=umd MIN=true rollup --config",
    "dist:dts": "dts-bundle-generator src/index.ts -o dist/glutenfree.d.ts --umd-module-name glutenfree",
    "demolib": "yarn __rmdemolib && yarn __cpdemolib",
    "__rmdemolib": "rm docs/lib/glutenfree.production.{es.min.js,es.min.js.map}",
    "__cpdemolib": "cp dist/glutenfree.production.{es.min.js,es.min.js.map} docs/lib",
    "clean": "rimraf build && rimraf dist"
  },
  "devDependencies": {
    "@types/webgl2": "^0.0.2",
    "cross-env": "^5.1.3",
    "dts-bundle-generator": "^0.6.0",
    "http-server": "^0.10.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.9.1",
    "typescript": "2.7.0-dev.20171221",
    "uglify-es": "^3.3.7"
  }
}
