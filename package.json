{
  "name": "glutenfree",
  "version": "0.0.2",
  "description": "We serve your draw calls type-safe and gluten-free",
  "author": "yanchith",
  "license": "MIT",
  "main": "dist/glutenfree.umd.js",
  "module": "dist/glutenfree.es.js",
  "types": "dist/glutenfree.d.ts",
  "scripts": {
    "serve": "http-server docs -p 8000",
    "prebuild": "rimraf build",
    "build": "tsc --outDir build",
    "prebuild:watch": "rimraf build",
    "build:watch": "tsc --outDir build --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts*\"",
    "predist": "rimraf dist",
    "dist": "yarn dist:es && yarn dist:umd && yarn dist:es:prod && yarn dist:umd:prod && yarn dist:es:prod:min && yarn dist:umd:prod:min && yarn dist:dts",
    "predist:watch": "rimraf dist",
    "dist:watch": "cross-env FMT=es rollup --config --watch",
    "dist:es": "cross-env FMT=es rollup --config",
    "dist:umd": "cross-env FMT=umd rollup --config",
    "dist:es:prod": "cross-env FMT=es PROD=true rollup --config",
    "dist:umd:prod": "cross-env FMT=umd PROD=true rollup --config",
    "dist:es:prod:min": "cross-env FMT=es PROD=true MIN=true rollup --config",
    "dist:umd:prod:min": "cross-env FMT=umd PROD=true MIN=true rollup --config",
    "dist:dts": "cp build/*.d.ts dist && mv dist/index.d.ts dist/glutenfree.d.ts",
    "demolib": "yarn demolib:rm && yarn demolib:cp",
    "demolib:rm": "rm docs/lib/glutenfree.es.{js,js.map}",
    "demolib:cp": "cp dist/glutenfree.es.{js,js.map} docs/lib",
    "clean": "rimraf build && rimraf dist"
  },
  "devDependencies": {
    "@types/webgl2": "^0.0.2",
    "cross-env": "^5.1.3",
    "http-server": "^0.10.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.0-rc",
    "uglify-es": "^3.3.8"
  }
}
